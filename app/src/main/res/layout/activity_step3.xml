    <TextView
        android:id="@+id/step3_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_beige"
        android:textSize="16sp"
        android:text="분쇄된 원두 커피를 드리퍼 내부에 담아줍니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step3_textview"
        android:padding="20dp"
        android:elevation = "5dp"
        android:fontFamily="@font/font_light"/>

    <TextView
        android:id="@+id/step3_weight"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_beige"
        android:textSize="16sp"
        android:text="원두 무게 : "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step3_info"
        android:padding="20dp"
        android:elevation = "10dp"
        android:fontFamily="@font/font_light"/>

    <Button
        android:id="@+id/step3_btn"
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/green"
        android:text="Next"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step3_weight"
        android:fontFamily="@font/font_medium"/>
