<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Step1Activity">

    <TextView
        android:id="@+id/step1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="130dp"
        android:text="Step 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/step1_time"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_brown"
        android:text="세팅하기"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step1_textview" />

    <TextView
        android:id="@+id/step1_info"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_beige"
        android:textSize="16sp"
        android:text="평평한 곳에 저울을 두고 위에 드립서버와 드리퍼를 올려줍니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step1_time" />
    <!--
        <TextView
            android:id="@+id/step1_weight"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@color/teal_200"
            android:textSize="16sp"
            android:text="물을 다 부으시면 40초 기다려주세요."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/step1_info" />
    -->
    <Button
        android:id="@+id/step1_btn"
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/green"
        android:text="Next"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step1_info" />
</androidx.constraintlayout.widget.ConstraintLayout>



