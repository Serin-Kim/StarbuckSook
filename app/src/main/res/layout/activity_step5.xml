<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Step5Activity">

    <TextView
        android:id="@+id/step5_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="130dp"
        android:text="Step 5: 푸어링"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/font_medium"/>

    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step5_btn"
        />

    <TextView
        android:id="@+id/countdown_text_step5"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_brown"
        android:text="남은 시간 : "
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step5_textview"
        android:elevation = "5dp"
        android:fontFamily="@font/font_medium"/>




    <TextView
        android:id="@+id/step5_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_beige"
        android:textSize="16sp"
        android:text="물 320ml(원두의 16배)를 가운데부터 나선형으로 가장자리까지 천천히 부어줍니다."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdown_text_step5"
        android:padding="20dp"
        android:elevation = "5dp"
        android:fontFamily="@font/font_light"/>

    <TextView
        android:id="@+id/step5_weight"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_beige"
        android:textSize="16sp"
        android:text="물을 다 부으시면 40초 기다려주세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step5_info"
        android:padding="20dp"
        android:elevation = "5dp"
        android:fontFamily="@font/font_light"/>

    <Button
        android:id="@+id/step5_btn"
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/green"
        android:text="Next"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step5_weight"
        android:fontFamily="@font/font_medium"/>
</androidx.constraintlayout.widget.ConstraintLayout>





